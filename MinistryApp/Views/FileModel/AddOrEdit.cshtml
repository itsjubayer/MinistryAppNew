@model Ministry.Models.FileModelVM

@{
    ViewData["Title"] = "Create";
}


<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form name="form1" asp-action="AddOrEdit" asp-controller="FileModel" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id)
        <div class="form-group col-md-12">
            
                <label asp-for="FileCategory" class="control-label"></label>
                @Html.DropDownListFor(m => m.FileCategory, new SelectList(ViewBag.categoryList, "Value", "Text"), "Select File Category", new { @class = "form-control" })
                <span asp-validation-for="FileCategory" class="text-danger"></span>
            
        </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="DateLine" class="control-label"></label>
                    <input asp-for="DateLine" id="datepicker" type="text" class="form-control" />
                    <span asp-validation-for="DateLine" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" /> @*onclick="phonenumber(document.form1.Mobile)"*@
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>

}
