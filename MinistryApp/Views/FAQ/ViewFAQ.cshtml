@model IEnumerable<Ministry.Models.FAQVM>

@{
    ViewData["Title"] = "Index";
}


@*<h1>Frequently Ask Question</h1>*@



<main id="main" data-aos="fade-up">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>FAQ</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>FAQ</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">

            <div class="accordion accordion-flush" id="accordionFlushExample">

                @{
                    int rowNo = 0;
                }
                @foreach (var item in Model)
                {
                    
                <div class="accordion-item">
                        @{
                            rowNo++;
                        } @*@rowNo*@
                        <h2 class="accordion-header" id="flush-heading-@rowNo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@rowNo" aria-expanded="false" aria-controls="flush-collapse-@rowNo">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                                <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
                                </svg> &nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.FaqTitle)
                        </button>
                    </h2>
                        <div id="flush-collapse-@rowNo" class="accordion-collapse collapse" aria-labelledby="flush-heading-@rowNo" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">@Html.DisplayFor(modelItem => item.FaqDescription)</div>
                    </div>
                </div>

                }


            </div>
        </div>
    </section>

</main><!-- End #main -->


