@model Ministry.Models.TypesOfReportVM

@{
    ViewData["Title"] = "Create";
}


@*<h4>Create</h4>
<hr />*@

<h4>Add Types Of Reports</h4>
<div class="row">
    <div class="col-md-7">
        <form asp-action="AddOrEdit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id)
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* @Html.HiddenFor(m => m.EntryBy, new { Value = "@User.Identity.Name" })*@


            <div class="form-group">
                <label asp-for="Report_Type_Name" class="control-label"></label>
                @*<input asp-for="Report_Type_Name" class="form-control" />*@
                @Html.TextBoxFor(m => m.Report_Type_Name, new { placeholder = "Report Type", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Report_Type_Name)
            </div>

            <div class="form-group">
                <label asp-for="Frequency_Of_Report" class="control-label"></label>
                <select asp-for="Frequency_Of_Report" asp-items="ViewBag.FreqOfReport"></select>                
                @Html.ValidationMessageFor(model => model.FreqOfReport)
            </div>

            @*<div class="form-group">
                <label asp-for="Start_Date" class="control-label"></label>
                @Html.TextBoxFor(m => m.Start_Date, new { placeholder = "Select Start Date", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Start_Date)
            </div>*@

            <div class="form-group">
                <label class="control-label">Start Alert Before Due Date</label>
                @Html.TextBoxFor(m => m.AlertDays, new { placeholder = "Alert Days", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AlertDays)
            </div>

            <div class="form-group">
                <label asp-for="AlertFrquency" class="control-label"></label>
                @Html.TextBoxFor(m => m.AlertFrquency, new { placeholder = "Alert Frequency", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AlertFrquency)
            </div>

            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                @*@Html.TextBoxFor(m => m.Remarks, new { placeholder = "Remarks", @class = "form-control" })*@
                @Html.TextArea("Remarks", null, new { @placeholder = "Remarks", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Remarks)
            </div>


            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
