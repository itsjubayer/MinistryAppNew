@model IEnumerable<Ministry.Models.ELearningVM>


<section class="inner-page">
    <div class="container">

       @for(int i=0;i<= 1; i++)
        {
            <div class="row">
            @foreach (var item in Model)
            {            
                <div class="col-lg-6">
                    <div class="card">
                        <iframe width="100%" height="300" src="@item.VDOUrl" title="@item.Title" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        <div class="card-body">
                                <h5 class="card-title"> @item.Title </h5>
                            <p class="card-text">@item.Description</p>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div><br />
                            </div>
                            <a href="detail-page.html" class="btn btn-success" style="margin-top:10px;">Resume Learning</a>
                        </div>
                    </div>
                </div>

                    @if (i == 1)
                        break;
            }
            </div> 
            break;
        }        

    </div>
</section>